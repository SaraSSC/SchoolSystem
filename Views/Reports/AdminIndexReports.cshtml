@model IEnumerable<SchoolSystem.Models.Reports.ReportsViewModel>
@{
    ViewData["Title"] = "Reports";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

<br />
<br />
<h3 class="text-center">Reports</h3>
<br />
<br />
<div class="row">
    <div class="col-md-12">
        <div class="row justify-content-center">
            <div class="col-auto">
                <table class="table table-hover table-responsive table-striped animated--fade-in" id="AdminIndexReports">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Age)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.User.FullName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.StatusDate)
                            </th>
                            <th>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="align-middle text-center">
                                        @if (item.Status == true)
                                        {
                                            <i style="font-size: 28px; color: darkgreen;" class="fa">&#xf14a;</i>
                                        }
                                        else
                                        {
                                            <i style="font-size: 26px; color: darkred;" class="fa">&#xf071;</i>
                                        }
                                    </td>
                                    <td class="align-middle font-weight-bold">
                                        @Html.DisplayFor(modelItem => item.Age)
                                    </td>
                                    <td class="align-middle">
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    <td class="align-middle">
                                        @Html.DisplayFor(modelItem => item.User.FullName)
                                    </td>
                                    <td class="align-middle">
                                        @Html.DisplayFor(modelItem => item.Date)
                                    </td>
                                    <td class="align-middle">
                                        @if (item.Status == true)
                                        {
                                            @Html.DisplayFor(modelItem => item.StatusDate)
                                        }
                                        else
                                        {
                                            <div>Pending</div>
                                        }
                                    </td>
                                    <td id="@item.Id" class="align-middle">
                                        <a asp-action="AdminReportDetails" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Details</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<br />
<div class="text-success text-center">
    <p>
        @Html.Raw(ViewBag.Message)
    </p>
</div>


<!-- Content Row -->
<div class="row" style="display: flex; flex-direction: center; align-content: center; justify-content: center">

    <!-- Content Column -->
    <div class="col-lg-8 mb-12">

        <!-- Project Card Example -->
        <div class="card shadow mb-4 animated--grow-in">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Projects</h6>
            </div>
            <div class="card-body">
                <h4 class="small font-weight-bold">
                    Adding individual disciplines <span class="float-right">20%</span>
                </h4>
                <div class="progress mb-4">
                    <div class="progress-bar bg-danger" role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <h4 class="small font-weight-bold">
                    Adding courses <span class="float-right">40%</span>
                </h4>
                <div class="progress mb-4">
                    <div class="progress-bar bg-warning" role="progressbar" style="width: 40%" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <h4 class="small font-weight-bold">
                    Students registated <span class="float-right">60%</span>
                </h4>
                <div class="progress mb-4">
                    <div class="progress-bar" role="progressbar" style="width: 60%" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <h4 class="small font-weight-bold">
                    Adding Staff <span class="float-right">80%</span>
                </h4>
                <div class="progress mb-4">
                    <div class="progress-bar bg-info" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <h4 class="small font-weight-bold">
                    Account Setup <span class="float-right">Complete!</span>
                </h4>
                <div class="progress">
                    <div class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>



    

@section Scripts{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/lib/chart.js/chart.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#AdminIndexReports').DataTable({
                responsive: true,
                columnDefs: [{
                    "targets": [4],
                    "orderable": false,
                    "searchable": false
                }],
                order: [[1, 'asc']]
            });
        });
    </script>

    <script type="text/javascript">
   
    Chart.defaults.global.defaultFontFamily = 'Nunito', '-apple-system,system-ui,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif';
    Chart.defaults.global.defaultFontColor = '#858796';

</script>
}