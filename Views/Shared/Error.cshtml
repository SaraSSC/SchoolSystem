@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}



@if (ViewBag.ErrorTitle == null)
{
    <div class="account-pages my-5 pt-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center mb-5">
                        <h1 class="display-2 fw-medium">5<i class="fa fa-solid fa-spinner bx-spin text-primary display-3"></i>0</h1>
                        <h4 class="text-uppercase">Internal Server Error</h4>
                        <div class="mt-5 text-center">
                            <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Back to Home</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-8 col-xl-6">
                    <div>
                        <img src="~/images/error-img.png" alt="" class="img-fluid" style=" overflow-clip-margin:content-box; overflow: clip">
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
   

    <div class="account-pages my-5 pt-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center mb-5">
                        <h4 class="text-uppercase text-center text-danger"><i class="fas fa-lg fa-hand-stop-o"></i>@Html.Raw(ViewBag.ErrorTitle)</h4>
                        <div class="mt-5 text-center">
                            <p class="text-center text-dark">@Html.Raw(ViewBag.ErrorMessage)</p>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
}
    