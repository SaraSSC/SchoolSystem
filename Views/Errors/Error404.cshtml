@{
	ViewBag.Title = "Error 404";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    
    .error-template {
        padding: 40px 15px;
        text-align: center;
    }

    .error-actions {
        margin-top: 15px;
        margin-bottom: 15px;
    }

        .error-actions .btn {
            margin-right: 10px;
        }
    
   
</style>


    <div class="container" >
        <div class="row">
        <div class="col-md-12 animated--grow-in">
            <div style="background-image:url('/images/blob.svg'); background-size: cover; width:1000px;height:500px; justify-content: center; align-content: center">
                <div class="error-template animated--grow-in">
                    <h1 class="display-1">Oops!</h1>
                    <h2 class="display-4">404 Not Found</h2>
                    <div class="error-details mb-4">
                        Sorry, an error has occured. The requested page was not found!
                    </div>
                    <div class="error-actions">
                        <a asp-controller="Home" asp-action="Index"   class="btn btn-primary btn-lg">
                            <i class="bi bi-house-fill me-2"></i>Take Me Home
                        </a> 
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>
