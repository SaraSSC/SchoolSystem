@model IEnumerable<SchoolSystem.Models.Users.EditUsersViewModel>
@{
	ViewData["Title"] = "Edit Users";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
@* <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" rel="stylesheet"> *@
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-body animated--grow-in">
            <h3 class="card-title text-center mb-4">Edit Users</h3>
            <div class="table-responsive">
                <table class="table table-hover" id="UsersTable">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.ProfilePicture)</th>
                            <th>@Html.DisplayNameFor(model => model.FullName)</th>
                            <th>@Html.DisplayNameFor(model => model.City)</th>
                            <th>@Html.DisplayNameFor(model => model.Email)</th>
                            <th>@Html.DisplayNameFor(model => model.Role)</th>
                            <th>Actions</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@Url.Content(item.ProfilePicture)" alt="Profile" class="rounded-circle profile-picture" style="max-width:100px; height:auto" />
                                    </td>
                                    <td>@item.FullName</td>
                                    <td>@item.City</td>
                                    <td>@item.Email</td>
                                    <td><span class="badge bg-info">@item.Role</span></td>
                                    <td>
                                        <a asp-action="EditUserProfile" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary btn-action me-1">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a asp-action="DeleteProfile" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger btn-action" id="btnDeleteItem">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            
        </div>
    </div>
    <div class="text-center mt-4 animated--grow-in">
        <a asp-action="RegisterUser" class="btn btn-primary btn-action">
            <i class="fas fa-user-plus"></i> New User
        </a>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-success mt-4 text-center" role="alert">
            @Html.Raw(ViewBag.Message)
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteDialog" tabindex="-1" aria-labelledby="deleteDialogLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteDialogLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this user?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="btnYesDelete">Delete</button>
                <button type="button" class="btn btn-secondary" id="btnNoDelete">Cancele</button>
            </div>
        </div>
    </div>
</div>





@section Scripts {


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">


    <script type="text/javascript">
        $(document).ready(function () {
            $('#UsersTable').DataTable({
                responsive: true,
                columnDefs: [{
                    "targets": [0, 5],
                    "orderable": false,
                    "searchable": false
                }],
                order: [[1, 'asc']]
            });
        });
    </script>

    <script type="text/javascript">
        $(document).ready(function () {
            var id = 0;
            $("a[id*=btnDeleteItem]").click(function () {
                id = $(this).parent()[0].id;
                $("#deleteDialog").modal("show");
                return false;
            });
            $("#btnNoDelete").click(function () {
                $("#deleteDialog").modal("hide");
                return false;
            });
            $("#btnYesDelete").click(function () {
                window.location.href = "/Users/DeleteProfile/" + id;
            });
        });
    </script>
}
