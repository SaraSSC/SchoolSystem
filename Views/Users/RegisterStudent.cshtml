@model SchoolSystem.Models.Users.RegisterStudentViewModel
@{
    ViewBag.Title = "New Student";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<div class="container mt-5 animated--grow-in">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title text-center mb-4">New Student</h3>
            <div class="text-danger text-center mb-4">
                <p>@Html.Raw(ViewBag.Message)</p>
            </div>
            <form method="post" enctype="multipart/form-data">
              
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="FirstName" class="form-label">First Name</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="LastName" class="form-label">Last Name</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger small"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="GenderId" class="form-label">Gender</label>
                        <select asp-for="GenderId" asp-items="Model.Genders" class="form-select"></select>
                        <span asp-validation-for="GenderId" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="QualificationId" class="form-label">Qualification</label>
                        <select asp-for="QualificationId" asp-items="Model.Qualifications" class="form-select"></select>
                        <span asp-validation-for="QualificationId" class="text-danger small"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="CcNumber" class="form-label">CC Number</label>
                        <input asp-for="CcNumber" class="form-control" />
                        <span asp-validation-for="CcNumber" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="BirthDate" class="form-label">Birth Date</label>
                        <div class="input-group">
                            <input type="text" asp-for="BirthDate" class="form-control datepicker">
                            <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                        </div>
                        <span asp-validation-for="BirthDate" class="text-danger small"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Address" class="form-label">Address</label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="City" class="form-label">City</label>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger small"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Confirm" class="form-label">Confirm Password</label>
                        <input asp-for="Confirm" type="password" class="form-control" />
                        <span asp-validation-for="Confirm" class="text-danger small"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-4">
                        <label asp-for="PictureFile" class="control-label"></label>
                        <input asp-for="PictureFile" class="form-control" type="file" accept="image/*" />
                        <span asp-validation-for="PictureFile" class="text-danger small"></span>
                    </div>
                    <div class="form-group col-md-4 align-self-end">
                        <div class="form-check">
                            <input asp-for="UseAsProfilePicture" type="checkbox" class="form-check-input" />
                            <label asp-for="UseAsProfilePicture" class="form-check-label">Use as profile picture?</label>
                        </div>
                        <span asp-validation-for="UseAsProfilePicture" class="text-danger small"></span>
                    </div>
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
                <div class="text-danger text-center mt-3" asp-validation-summary="ModelOnly"></div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.datepicker').datepicker({
                format: 'dd/mm/yyyy',
                orientation: "bottom",
                autoclose: true
            });
        });
    </script>
}
