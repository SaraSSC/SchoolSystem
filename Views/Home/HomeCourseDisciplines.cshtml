@model SchoolSystem.Models.Home.HomeCourseDisciplinesViewModel
@{
    ViewData["Title"] = "Home";
    <style type="text/css" media="screen">
        .table-hover tbody tr:hover td {
            background-color: #f5f3e3;
        }
    </style>
    <link rel="stylesheet" href="~/css/nicepage.css" media="screen">
    <link rel="stylesheet" href="/css/index.css" media="screen">
    <script class="u-script" type="text/javascript" src="jquery-1.9.1.min.js" defer=""></script>
    <script class="u-script" type="text/javascript" src="/js/nicepage.js" defer=""></script>
    <link id="u-theme-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,500,500i,600,600i,700,700i,800,800i">
    <link id="u-page-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,500,500i,600,600i,700,700i,800,800i">
}
<div class="u-align-center-xl">
    <p class="u-text-active-palette-5-dark-3">
        Our disciplines cover a wide range of topics but some themes include software applications, hardware, programming, security, business applications, design, artificial intelligence, databases, medical records, and others.
    </p>
</div>
<br>

<br>
<div class="row">
  <div class="col-md-12">
     <div class="row justify-content-center">
		<div class="card shadow-sm">
			<div class="card-body">
					
				<div class="table-responsive">
					<table class="table table-hover" id="HomeCourses">
						<thead class="table-dark">
							<tr>
								<th>
									@Html.DisplayNameFor(model => model.Disciplines.FirstOrDefault().Name)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Disciplines.FirstOrDefault().Area)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Disciplines.FirstOrDefault().Duration)
								</th>
							</tr>
						</thead>
						<tbody>
							@if (Model.Disciplines != null)
							{
								@foreach (var item in Model.Disciplines)
								{
									<tr style="user-select: none;">
										<td class="align-middle font-weight-bold h5">
											@Html.DisplayFor(modelItem => item.Name)
										</td>
										<td class="align-middle">
											@Html.DisplayFor(modelItem => item.Area)
										</td>
										<td class="align-middle">
											@Html.DisplayFor(modelItem => item.Duration)
										</td>
									</tr>
								}
							}
						</tbody>
					</table>
				</div>
			</div>
            
        <br>
        <div class="col-md-2 offset-md-5 nav-item text-center">
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back</a>
     </div>
	</div>
  </div>
</div>