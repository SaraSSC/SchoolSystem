@model IEnumerable<SchoolSystem.Models.Courses.CoursesViewModel>
@{
    ViewBag.Title = "Courses";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h1 class="text-center mb-4 animated--fade-in"> Courses</h1>
</div>
<div class="card shadow-sm">
    <div class="card-body animated--grow-in">
        <table class="table table-hover" id="StaffIndexCourses">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Code)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Area)</th>
                    <th>@Html.DisplayNameFor(model => model.Duration)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle fw-bold">@Html.DisplayFor(modelItem => item.Code)</td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.Name)</td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.Area)</td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.Duration) Hours</td>
                            
                            <td id="@item.Id" class="align-middle">
                                <a asp-action="DetailsCourseDisciplines" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Disciplines</a>
                            </td>
                            
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>



@section Scripts {

    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <script type="text/javascript">
        $(document).ready(function () {
            $('#StaffIndexCourses').DataTable({
                responsive: true,
                columnDefs: [{
                    "targets": [4],
                    "orderable": false,
                    "searchable": false
                }],
                order: [[1, 'asc']]
            });
        });
    </script>
}